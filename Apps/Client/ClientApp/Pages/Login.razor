@inject Blazored.LocalStorage.ILocalStorageService localStorage
@inject SOAPService soap
@inject NavigationManager navigationManager
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Login" Class="mr-3 mb-n1" />
            Вход
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="login" Immediate="true" Label="Логин" Clearable="true" />
        <MudTextField @bind-Value="password" Immediate="true" Label="Пароль" Clearable="true" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ButtonTestclick" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Отмена</MudButton>
        <MudButton Disabled="@(string.IsNullOrEmpty(login) || string.IsNullOrEmpty(password) ? true : false)" Color="Color.Error" OnClick="Log_in">Войти</MudButton>
    </DialogActions>
</MudDialog>
